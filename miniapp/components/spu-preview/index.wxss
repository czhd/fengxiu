.container {
	width: 340rpx;
	background-color: #ffffff;
	box-shadow:0 0 12rpx 0 rgba(221,221,221,0.5);
	display: flex;
	flex-direction: column;
	margin-bottom: 30rpx;
}

/* .img {
	width: 100%;
	height: 360rpx;
	display: flex;
} */

.inner-container {
	display: flex;
	flex-direction: column;
	padding: 16rpx 16rpx 28rpx 16rpx;
}

.title {
	font-size: 28rpx;
	color: #333333;
}

.tags {
	display: flex;
	flex-direction: row;
	margin-top: 8rpx;
	margin-bottom: 6rpx;
	flex-wrap: wrap;
}

.tags view {
	display: inline !important;
}

.l-tag {
	background-color: #DCEBE6 !important;
	color: #157658;
	font-size: 20rpx;
	margin-right: 16rpx;
}

.price {
	display: flex;
	flex-direction: row;
}

.discount-price {
	margin-left: 20rpx;
}


.subtitle {
	font-size: 24rpx;
	color: #999999;
	margin-top: 8rpx;
	margin-bottom: 6rpx;
}